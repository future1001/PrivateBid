{
  "name": "private-auction-house",
  "version": "1.0.0",
  "description": "A private auction house with FHE (Fully Homomorphic Encryption) support",
  "private": true,
  "workspaces": [
    "frontend",
    "hardhat"
  ],
  "scripts": {
    "setup": "node scripts/setup.sh",
    "dev": "concurrently \"npm run dev:hardhat\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:hardhat": "npm run node --workspace=hardhat",
    "build": "npm run build --workspace=frontend",
    "compile": "npm run compile --workspace=hardhat",
    "test": "npm run test --workspace=hardhat",
    "test:connection": "node scripts/simple-test.js",
    "deploy:local": "npm run deploy:local --workspace=hardhat",
    "deploy:sepolia": "npm run deploy:sepolia --workspace=hardhat",
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=hardhat",
    "clean": "npm run clean --workspace=hardhat && npm run clean --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "format": "prettier --write \"**/*.{js,ts,tsx,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "blockchain",
    "auction",
    "fhe",
    "privacy",
    "nextjs",
    "hardhat",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
